# ========================================
# ICC Covoiturage - Configuration
# ========================================

# Application
NUXT_PUBLIC_APP_NAME="ICC Covoiturage"
NUXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Internationalisation
NUXT_PUBLIC_DEFAULT_LOCALE="fr"

# API Configuration (si applicable)
NUXT_PUBLIC_API_BASE_URL="https://api.votre-domaine.com"
NUXT_PUBLIC_API_TIMEOUT=30000

# Security
SESSION_SECRET="your-super-secret-key-min-32-characters-long"
NUXT_PUBLIC_ENABLE_HTTPS_REDIRECT=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Geolocation (si applicable)
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=""
NUXT_PUBLIC_MAPBOX_TOKEN=""

# Email Service (si applicable)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@icc-covoiturage.com"

# SMS Service (si applicable)
SMS_PROVIDER=""
SMS_API_KEY=""
SMS_SENDER_ID="ICC"

# Storage (si applicable)
STORAGE_PROVIDER="local"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-1"
AWS_BUCKET=""

# Analytics (optionnel)
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NUXT_PUBLIC_MATOMO_URL=""
NUXT_PUBLIC_MATOMO_SITE_ID=""

# Monitoring (optionnel)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Feature Flags
NUXT_PUBLIC_ENABLE_CHAT=true
NUXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NUXT_PUBLIC_ENABLE_GEOLOCATION=true

# Development
NUXT_DEVTOOLS_ENABLED=false
